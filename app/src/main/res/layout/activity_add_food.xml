<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFoodActivity"
    android:padding="20dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/TaomNoma"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/taom_noma"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_background"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_food_products"
        app:layout_constraintHeight_percent="0.1">

    </EditText>

    <EditText
        android:id="@+id/edt_food_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/kerakli_mahsuotlar"
        app:layout_constraintTop_toBottomOf="@id/TaomNoma"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_background"
        android:padding="20dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/edt_products_orde"
        app:layout_constraintHeight_percent="0.2">

    </EditText>

    <EditText
        android:id="@+id/edt_products_orde"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Taom Tayorlash Tartibi"
        app:layout_constraintBottom_toTopOf="@+id/btn_saqlash"
        app:layout_constraintTop_toBottomOf="@id/edt_food_products"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_background"
        android:padding="20dp"
        android:textAlignment="textStart"
        app:layout_constraintHeight_percent="0.3">

    </EditText>
<Button
    android:id="@+id/btn_saqlash"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/edt_products_orde"
    android:text="@string/saqlash"
    android:textAllCaps="false"
    android:backgroundTint="@color/teal_200"
    app:layout_constraintHorizontal_bias="0.9"
    app:layout_constraintHeight_percent="0.08"
    app:layout_constraintWidth_percent="0.35">

</Button>

















</androidx.constraintlayout.widget.ConstraintLayout>